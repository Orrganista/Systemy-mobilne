<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sensor_item_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="5dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/sensor_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:contentDescription="@string/sensor_icon"
        app:srcCompat="@drawable/ic_sensor_foreground" />

    <TextView
        android:id="@+id/sensor_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:text="@string/sensor_name"
        android:textAlignment="textStart" />
</LinearLayout>